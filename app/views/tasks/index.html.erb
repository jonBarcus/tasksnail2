<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<div class="my-tasks">
<% @tasks.each do |task| %>
  <%= render task %>
  <% end %>
</div>

<div class="complete-tasks">
  <% @tasks.complete.each do |task| %>
  <h3><%= task.name %></h3>
  <% end %>
</div>

<%= link_to "New Task", new_task_path, remote: true, class: "new-task-button" %>
